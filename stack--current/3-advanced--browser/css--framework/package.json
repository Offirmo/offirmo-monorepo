{
	"name": "@offirmo-private/css--framework",
	"description": "Small reusable CSS classes",
	"version": "0.0.1",
	"license": "Unlicense",
	"private": true,

	"sideEffects": true,
	"#exports": "./src/index.tsx",
	"source": "src/index.tsx",

	"dependencies": {
		"@offirmo-private/css--foundation": "*"
	},

	"scripts": {
		"clean": "monorepo-script--clean-package …dist …cache",

		"_parcel:serve": "parcel serve --log-level verbose  'doc/demo/*.html' --port 3030 --no-autoinstall",
		"dev": "npm-run-all clean --parallel _parcel:serve",

		"build": "node ./src/~~gen/bundle.mjs"
	},

	"devDependencies": {
		"@offirmo-private/css--utils": "*",
		"@offirmo-private/monorepo-scripts": "*",
		"@offirmo-private/storypad": "*",
		"@offirmo-private/toolbox--parcel": "*",
		"@offirmo/cli-toolbox": "*",
		"lightningcss": "^1",
		"npm-run-all": "^4"
	}
}
