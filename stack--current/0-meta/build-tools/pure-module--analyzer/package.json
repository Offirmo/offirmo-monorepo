{
	"name": "@offirmo-private/pure-module--analyzer",
	"description": "Walk/parse a pure module and extract infos from it in order to generate build-related files",
	"version": "0.0.1",
	"author": "Offirmo <offirmo.net@gmail.com> (https://www.offirmo.net/)",
	"license": "Unlicense",
	"private": true,
	"sideEffects": false,
	"type": "module",
	"exports": {
		".": "./module/src/index.ts"
	},
	"source": "module/src/index.ts",
	"peerDependencies": {
		"tslib": "^2"
	},
	"dependencies": {
		"@offirmo-private/pkg-infos-resolver": "*",
		"ignore-walk": "^7",
		"json5": "^2",
		"parse-imports-ts": "^1",
		"tiny-invariant": "^1",
		"write-json-file": "^6"
	},
	"scripts": {
		"test--ts": "echo \"@offirmo-private/pure-module--analyzer\" && tsc --noEmit",
		"test--ts--watch": "tsc --noEmit --watch",
		"dev": "run-s test--ts--watch",
		"demo": "node --experimental-strip-types ./module/##demo/index.ts",
		"test": "run-s test--ts"
	},
	"devDependencies": {
		"@offirmo-private/monorepo-scripts": "*",
		"@offirmo/unit-test-toolbox": "^9",
		"@types/ignore-walk": "^4",
		"@types/node": "^22",
		"npm-run-all": "^4",
		"tslib": "^2",
		"typescript": "^5"
	}
}
