	"author": "Offirmo <offirmo.net@gmail.com> (https://www.offirmo.net/)",
	"license": "Unlicense",
	"private": true,
	"sideEffects": true,
	"type": "module",
	"exports": {
		".": "./module/src/index.ts"
	},
	"source": "module/src/index.ts",
	"peerDependencies": {
		"tslib": "^2"
	},
	"dependencies": {
		"tiny-invariant": "^1"
	},
	"scripts": {
		"_clean--pkg": "monorepo-script--clean-package â€¦cache",
		"clean": "npm-run-all _clean--pkg",
		"_start:parcel:storypad": "parcel serve module/__fixtures/storypad/index.html --port 8383  --lazy  --no-autoinstall",
		"stories": "npm-run-all clean --parallel _start:parcel:storypad",
		"test--ts": "echo \"@offirmo-private/css--foundation\" && tsc --noEmit",
		"test--ts--watch": "tsc --noEmit --watch",
		"dev": "run-s clean test--ts--watch",
		"_start:parcel:demo": "parcel serve module/__fixtures/wc-kitchen-sink/demo.html --port 8080  --lazy  --no-autoinstall",
		"demo": "npm-run-all clean --parallel _start:parcel:demo",
		"_start:parcel:sandbox": "parcel serve module/~~sandbox/index.html --port 8181  --lazy  --no-autoinstall",
		"sandbox": "npm-run-all clean --parallel _start:parcel:sandbox",
		"test": "run-s test--ts",
		"build": "node --experimental-strip-types ./module/__build/bundle.ts"
	},
	"devDependencies": {
		"@offirmo-private/css--reset": "*",
		"@offirmo-private/monorepo-scripts": "*",
		"@offirmo-private/storypad": "*",
		"@offirmo-private/toolbox--parcel": "*",
		"@offirmo/unit-test-toolbox": "^9",
		"@types/node": "^22",
		"lightningcss": "^1",
		"npm-run-all": "^4",
		"tslib": "^2",
		"typescript": "^5"
	}
}
