{
	"name": "@offirmo/universal-debug-api-interface",
	"description": "TypeScript types for a universal debug API (no code)",
	"version": "1.0.1",
	"author": "Offirmo <offirmo.net@gmail.com>",
	"license": "Unlicense",

	"sideEffects": false,
	"type": "module",
	"exports": {
		".": {
			"import": "./dist/src.es2022.esm/index.js",
			"require": "./dist/src.es2022.cjs/index.js"
		}
	},
	"module": "dist/src.es2022.esm/index.js",
	"main": "dist/src.es2022.cjs/index.js",
	"typings": "dist/src.es2022.esm/index.d.ts",
	"source": "src/index.ts",

	"size-limit": [
		{
			"limit": "100b",
			"path": "dist/src.es2022.esm/index.js"
		},
		{
			"limit": "100b",
			"path": "dist/src.es2022.cjs/index.js"
		}
	],

	"peerDependencies": {
	},
	"dependencies": {
		"@offirmo/practical-logger-types": "^3"
	},

	"devDependencies": {
		"@offirmo-private/monorepo-scripts": "*",
		"@size-limit/preset-small-lib": "^11",
		"npm-run-all": "^4",
		"size-limit": "^11"
	},
	"scripts": {
		"clean": "monorepo-script--clean-package â€¦dist",

		"_build:dev:watch": "monorepo-script--build-typescript-package --watch",
		"_build:prod": "monorepo-script--build-typescript-package",
		"ensure-size": "size-limit",

		"dev": "run-s clean _build:dev:watch",
		"build": "run-s  clean _build:prod",

		"np": "np --no-publish",
		"prepublishOnly": "run-s clean build ensure-size"
	},

	"files": [
		"dist",
		"src"
	],
	"repository": "https://github.com/Offirmo/offirmo-monorepo--2022/tree/main/stack--current/3-advanced--multi/universal-debug-api-interface",
	"keywords": [
		"logger",
		"debug",
		"typescript"
	],
	"homepage": "https://github.com/Offirmo/offirmo-monorepo--2022/tree/main/stack--current/3-advanced--multi/universal-debug-api-interface",
	"bugs": {
		"url": "https://github.com/Offirmo/offirmo-monorepo/issues"
	}
}
