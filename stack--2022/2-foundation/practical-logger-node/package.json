{
	"name": "@offirmo/practical-logger-node",
	"description": "node-specific practical logger",
	"version": "0.3.0",
	"author": "Offirmo <offirmo.net@gmail.com>",
	"license": "Unlicense",

	"type": "module",
	"sideEffects": false,
	"exports": {
		".": {
			"import": "./dist/src.es2021/index.js",
			"require": "./dist/src.es2021.cjs/index.js"
		}
	},
	"main": "dist/src.es2021.cjs/index.js",
	"typings": "dist/src.es2021.cjs/index.d.ts",
	"source": "src/index.ts",

	"size-limit": [
		{
			"limit": "10kb",
			"path": "dist/src.es2021.cjs/index.js"
		}
	],

	"peerDependencies": {
		"tslib": "^2"
	},
	"dependencies": {
		"@offirmo-private/prettify-any": "^0",
		"@offirmo-private/print-error-to-ansi": "^0",
		"@offirmo/practical-logger-core": "^3",
		"@offirmo/practical-logger-types": "^3",
		"chalk": "^4",
		"indent-string": "^5",
		"size-limit": "^7"
	},

	"scripts": {
		"clean": "monorepo-script--clean-package â€¦dist",

		"test": "./node_modules/.bin/mocha --bail --config ./node_modules/@offirmo/unit-test-toolbox/mocharc.json ./node_modules/@offirmo/unit-test-toolbox/mocha-chai-init-node.cjs 'dist/src.es2021.cjs/**/*spec.js'",
		"_build:dev:watch": "monorepo-script--build-typescript-package --watch",
		"_build:prod": "monorepo-script--build-typescript-package",
		"ensure-size": "size-limit",

		"dev": "run-s clean _build:dev:watch",
		"build": "run-s  clean _build:prod",
		"cheatsheet": "node doc/cheatsheet.js",
		"demo": "node doc/demo.js",

		"prepublishOnly": "run-s clean build test ensure-size"
	},
	"devDependencies": {
		"@offirmo/unit-test-toolbox": "^8",
		"@size-limit/preset-small-lib": "^7",
		"npm-run-all": "^4",
		"tslib": "^2"
	},

	"files": [
		"dist",
		"src"
	],
	"repository": "https://github.com/Offirmo/offirmo-monorepo--2022/tree/main/stack--2022/2-foundation/practical-logger-node",
	"keywords": [
		"logger",
		"typescript"
	],
	"homepage": "https://github.com/Offirmo/offirmo-monorepo--2022/tree/main/stack--2022/2-foundation/practical-logger-node",
	"bugs": {
		"url": "https://github.com/Offirmo/offirmo-monorepo/issues"
	}
}
