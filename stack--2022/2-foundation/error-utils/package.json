{
	"name": "@offirmo/error-utils",
	"description": "utilities around JavaScript Error creation and manipulation",
	"version": "0.0.1",
	"author": "Offirmo <offirmo.net@gmail.com>",
	"license": "Unlicense",

	"sideEffects": false,
	"type": "module",
	"exports": {
		".": {
			"import": "./dist/src.es2022.esm/index.js",
			"require": "./dist/src.es2022.cjs/index.js"
		}
	},
	"module": "dist/src.es2022.esm/index.js",
	"main": "dist/src.es2022.cjs/index.js",
	"typings": "dist/src.es2022.esm/index.d.ts",
	"source": "src/index.ts",

	"size-limit": [
		{
			"limit": "600B",
			"path": "dist/src.es2022.esm/index.js"
		},
		{
			"limit": "700B",
			"path": "dist/src.es2022.cjs/index.js"
		}
	],

	"peerDependencies": {
	},
	"dependencies": {
	},

	"scripts": {
		"clean": "monorepo-script--clean-package â€¦dist",

		"_build:dev:watch": "monorepo-script--build-typescript-package --watch",
		"_build:prod": "monorepo-script--build-typescript-package",

		"dev": "run-s clean _build:dev:watch",
		"test": "mocha --bail --config ./node_modules/@offirmo/unit-test-toolbox/mocharc.json ./node_modules/@offirmo/unit-test-toolbox/mocha-chai-init-node.mjs 'dist/src.es2022.esm/**/*spec.js'",
		"ensure-size": "size-limit",
		"build": "run-s  clean _build:prod",
		"demo": "node doc/demo.js",

		"prepublishOnly": "run-s clean build test ensure-size"
	},
	"devDependencies": {
		"@offirmo-private/monorepo-scripts": "*",
		"@offirmo/unit-test-toolbox": "^9",
		"@size-limit/preset-small-lib": "^8",
		"@types/icepick": "^2",
		"icepick": "^2",
		"npm-run-all": "^4",
		"size-limit": "^8"
	},

	"files": [
		"dist",
		"src"
	],
	"repository": "https://github.com/Offirmo/offirmo-monorepo--2022/tree/main/stack--2022/2-foundation/error-utils",
	"keywords": [
		"error",
		"typescript"
	],
	"homepage": "https://github.com/Offirmo/offirmo-monorepo--2022/tree/main/stack--2022/2-foundation/error-utils",
	"bugs": {
		"url": "https://github.com/Offirmo/offirmo-monorepo/issues"
	}
}
