{
	"name": "@offirmo/universal-debug-api-node",
	"description": "Implementation of Offirmo’s Universal Debug Api for node",
	"version": "0.2.0",
	"author": "Offirmo <offirmo.net@gmail.com>",
	"license": "Unlicense",

	"type": "module",
	"sideEffects": true,
	"exports": {
		".": {
			"import": "./dist/src.es2021/index.js",
			"require": "./dist/src.es2021.cjs/index.js"
		}
	},
	"main": "dist/src.es2021.cjs/index.js",
	"typings": "dist/src.es2021.cjs/index.d.ts",
	"source": "src/index.ts",

	"size-limit": [
		{
			"limit": "15kb",
			"path": "dist/src.es2021.cjs/index.js"
		}
	],

	"peerDependencies": {
		"tslib": "^2"
	},
	"dependencies": {
		"@offirmo/globalthis-ponyfill": "^3",
		"@offirmo/practical-logger-node": "^0",
		"@offirmo/universal-debug-api-interface": "^1"
	},

	"devDependencies": {
		"@babel/core": "^7",
		"@offirmo/practical-logger-core": "^3",
		"@size-limit/preset-small-lib": "^7",
		"npm-run-all": "^4",
		"size-limit": "^5",
		"tslib": "^2"
	},
	"scripts": {
		"clean": "monorepo-script--clean-package …dist",

		"_build:dev:watch": "monorepo-script--build-typescript-package --watch",
		"_build:prod": "monorepo-script--build-typescript-package",
		"build:bundle": "parcel build --no-autoinstall --no-source-maps --out-file index-bundle.js  src/index.ts",
		"ensure-size": "size-limit",

		"dev": "run-s clean _build:dev:watch",
		"build": "run-s  clean _build:prod",
		"demo": "UDA_OVERRIDE__LOGGER_FOO_LOGLEVEL=verbose UDA_OVERRIDE__DB_URL=localhost:1234 node ./doc/demo.js",

		"np": "np --no-publish",
		"prepublishOnly": "run-s clean _build:prod ensure-size"
	},

	"files": [
		"dist",
		"src"
	],
	"repository": "https://github.com/Offirmo/offirmo-monorepo--2022/tree/main/stack--2022/3-advanced--multi/universal-debug-api-node",
	"keywords": [
		"debug",
		"logger",
		"typescript"
	],
	"homepage": "https://github.com/Offirmo/offirmo-monorepo--2022/tree/main/stack--2022/3-advanced--multi/universal-debug-api-node",
	"bugs": {
		"url": "https://github.com/Offirmo/offirmo-monorepo/issues"
	}
}
