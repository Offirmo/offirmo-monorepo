{
	"name": "offirmo-monorepo",
	"description": "A monorepo for all my JavaScript / TypeScript personal projects. So convenient!",
	"repository": "https://github.com/Offirmo/offirmo-monorepo",
	"version": "2.4.0",
	"author": "Offirmo <offirmo.net@gmail.com>",
	"license": "Unlicense",
	"private": true,

	"COMMENTS": {
		"01": "dependencies: Netlify build only installs PROD dependencies, so make sure modules critical for scripts are included!"
	},

	"heroku-run-build-script": false,

	"engines": {
		"node": "16.x"
	},

	"scripts": {
		"heroku-prebuild": "echo This runs before Heroku nodjs buildback installs dependencies. Ensuring monorepo setup... && pwd && test -f Procfile",
		"heroku-postbuild": "echo This runs after Heroku installs dependencies, but before Heroku prunes and caches dependencies. && pwd && ls -l",

		"manypkg--check": "manypkg check",
		"manypkg--fix": "manypkg fix",

		"_clean--all--cmd": "bolt ws run clean",
		"_clean--all--rm": "bolt ws exec -- rm -rf .cache .parcel .parcel-cache dist node_modules",
		"_clean--root": "rm -rf node_modules .npm npm-debug.log package-lock.json yarn.lock yarn-error.log .yalc .awcache .parcel .parcel-cache bower_components typings",

		"clean": "run-s  _clean--all--cmd _clean--all--rm _clean--root",

		"test": "manypkg exec yarn test",
		"build": "manypkg exec yarn build"
	},
	"bolt": {
		"workspaces": [
			"0-meta/build-tools/*",
			"0-meta/toolboxes/*",
			"1-stdlib/*",
			"2-foundation/*",
			"3-advanced--browser/*",
			"3-advanced--isomorphic/*",
			"3-advanced--multi/*",
			"x3-advanced--node/*",
			"x4-tools/*",
			"x5-incubator/active/*",
			"x9-oh-my-rpg/*",
			"xA-apps--core/immortal-clicker/*",
			"xA-apps--core/the-boring-rpg/*",
			"xA-apps--core/isekai-capitalist/*",
			"xB-apps--support/online-adventur.es/*",
			"xC-apps--clients/immortal-clicker/*",
			"xC-apps--clients/the-boring-rpg/*",
			"xD-minisites/*"
		]
	},

	"dependencies": {
		"chalk": "^5",
		"fs-extra": "^10",
		"meow": "^10",
		"tiny-invariant": "^1"
	},
	"devDependencies": {
		"@geometricpanda/storybook-addon-iframe": "^0",
		"@manypkg/cli": "^0.19",
		"@parcel/config-default": "^2",
		"@parcel/core": "^2",
		"@parcel/packager-raw-url": "^2",
		"@parcel/packager-ts": "^2",
		"@parcel/packager-xml": "^2",
		"@parcel/transformer-typescript-tsc": "^2",
		"@parcel/transformer-typescript-types": "^2",
		"@parcel/transformer-webmanifest": "^2",
		"@parcel/transformer-xml": "^2",
		"@storybook/addon-actions": "^6",
		"@storybook/addon-console": "^1",
		"@storybook/addon-essentials": "^6",
		"@storybook/addon-links": "^6",
		"@storybook/react": "^6",
		"@types/chai": "^4",
		"@types/chai-as-promised": "^7",
		"@types/mocha": "^9",
		"@types/sinon": "^10",
		"@types/sinon-chai": "^3",
		"chai": "^4",
		"chai-as-promised": "^7",
		"chai-fetch-mock": "^3",
		"chai-moment": "^0.1",
		"chai-subset": "^1",
		"chalk": "^5",
		"cpx": "^1",
		"cross-spawn": "^7",
		"eslint-plugin-chai-expect": "^3",
		"eslint-plugin-mocha": "^10",
		"fetch-ponyfill": "^7",
		"lodash": "^4",
		"memoize-one": "^6",
		"meow": "^10",
		"mocha": "^10",
		"npm-run-all": "^4",
		"parcel": "^2",
		"path-exists": "^5",
		"sinon": "^13",
		"sinon-chai": "^3",
		"storybook-addon-grid": "^0",
		"storybook-addon-jsx": "^7",
		"storybook-dark-mode": "^1",
		"storybook-mobile": "^1",
		"tildify": "^3",
		"tiny-invariant": "^1",
		"typescript": "^4",
		"zx": "^6"
	},
	"resolutions": {}
}
